{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=FTPBAuth;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "FTPBAuth",
    "Audience": "FTPBAuthUsers",
    "ExpirationInMinutes": 60
  },
  "Twilio": {
    "AccountSid": "YOUR_TWILIO_ACCOUNT_SID",
    "AuthToken": "YOUR_TWILIO_AUTH_TOKEN",
    "PhoneNumber": "+1234567890"
  },
  "RateLimiting": {
    "OtpMaxAttempts": 5,
    "OtpWindowMinutes": 15
  },
  "ApiSecretKey": "YOUR_SUPER_SECRET_API_KEY_CHANGE_IN_PRODUCTION"
}
