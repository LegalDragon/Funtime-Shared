{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:3000",
      "https://pickleball.community",
      "https://pickleball.college",
      "https://pickleball.date",
      "https://pickleball.jobs",
      "https://auth.funtime.com"
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=FuntimeIdentity;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "FuntimeIdentity",
    "Audience": "FuntimePickleballUsers",
    "ExpirationInMinutes": 60
  },
  "Stripe": {
    "SecretKey": "YOUR_STRIPE_SECRET_KEY",
    "PublishableKey": "YOUR_STRIPE_PUBLISHABLE_KEY",
    "WebhookSecret": "YOUR_STRIPE_WEBHOOK_SECRET"
  },
  "Twilio": {
    "AccountSid": "YOUR_TWILIO_ACCOUNT_SID",
    "AuthToken": "YOUR_TWILIO_AUTH_TOKEN",
    "PhoneNumber": "+1234567890"
  },
  "RateLimiting": {
    "OtpMaxAttempts": 5,
    "OtpWindowMinutes": 15
  },
  "ApiSecretKey": "YOUR_SUPER_SECRET_API_KEY_CHANGE_IN_PRODUCTION"
}
